<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_margin="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/darkMode"
            app:cardElevation="7dp">

            <LinearLayout
                android:layout_margin="8dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/itemImageView"
                    android:layout_width="85dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:src="@drawable/traveling"
                    app:civ_border_color="@color/colorGreen"
                    app:civ_border_width="0.3dp" />

                <LinearLayout
                    android:layout_marginStart="4dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/country"
                        android:textColor="@color/whiteColor"
                        android:textSize="21sp"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="Country" />


                    <TextView
                        android:id="@+id/location"
                        android:textColor="@color/whiteColor"
                        android:textSize="18sp"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="Where exacttly" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_gravity="end|center"
                        android:drawableStart="@drawable/ic_dollar_18dp"
                        android:id="@+id/amount"
                        android:layout_marginEnd="8dp"
                        android:drawablePadding="4dp"
                        android:gravity="center"
                        android:text="50000"
                        android:textColor="@color/whiteColor"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:textSize="16sp" />
                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
</layout>